<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Thomas Utrilla Portfolio", sticky: false, time: 1000) %>

<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Thomas Utrilla Portfolio", sticky: false, time: 1000) %>

<% else %>
  <%= js add_gritter(flash[:notice], title: "Thomas Utrilla Portfolio", sticky: false, time: 1000) %>

<% end %>
